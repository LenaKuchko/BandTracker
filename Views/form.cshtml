@{
  Layout = "Shared/_Layout.cshtml";
}

<h2 class="text-center">Add new venue</h2>
<div class="col-sm-"6>
  <form action="venues/new" method="post">
    <div class="form-group">
      <label>Venue's Name:</label>
      <input type="text" name="name" class="form-control" required>
    </div>
    <div class="form-group">
      <label>Bands:</label>
      <select name="band" class="form-control">
        <option value="b"></option>
        @if(@Model["bands"].Count > 0)
        {
          @foreach(var band in @Model["bands"])
          {
            <option value="band.Id">@band.Name</option>
          }
        }
      </select>
    </div>
    <button type="submit" class="btn btn-info">Create appointment</button>
  </form>
</div>
<div class="col-sm-6">
  @if(@Model.ContainsKey("new-venue"))
  {
    <h3>@Model["new-venue"].Name have been added successfully!</h3>
  }
</div>
